{
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "登录",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/dashboard/index",
      "style": {
        "navigationBarTitleText": "监测中心",
        "navigationBarBackgroundColor": "@navBgColor",
        "navigationBarTextStyle": "@navTxtStyle",
        "backgroundColor": "@bgColor",
        "backgroundTextStyle": "@bgTxtStyle",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/market/index",
      "style": {
        "navigationBarTitleText": "市场概况",
        "navigationBarBackgroundColor": "@navBgColor",
        "navigationBarTextStyle": "@navTxtStyle",
        "backgroundColor": "@bgColor",
        "backgroundTextStyle": "@bgTxtStyle",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/stock-search/index",
      "style": {
        "navigationBarTitleText": "搜索股票",
        "navigationBarBackgroundColor": "@navBgColor",
        "navigationBarTextStyle": "@navTxtStyle",
        "backgroundColor": "@bgColor",
        "backgroundTextStyle": "@bgTxtStyle"
      }
    },
    {
      "path": "pages/stock-detail/index",
      "style": {
        "navigationBarTitleText": "股票详情",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/monitor-edit/index",
      "style": {
        "navigationBarTitleText": "添加监测",
        "navigationBarBackgroundColor": "@navBgColor",
        "navigationBarTextStyle": "@navTxtStyle",
        "backgroundColor": "@bgColor",
        "backgroundTextStyle": "@bgTxtStyle"
      }
    },
    {
      "path": "pages/settings/index",
      "style": {
        "navigationBarTitleText": "设置",
        "navigationBarBackgroundColor": "@navBgColor",
        "navigationBarTextStyle": "@navTxtStyle",
        "backgroundColor": "@bgColor",
        "backgroundTextStyle": "@bgTxtStyle"
      }
    },
    {
      "path": "uni_modules/uni-upgrade-center-app/pages/upgrade-popup",
      "style": {
        "disableScroll": true,
        "app-plus": {
          "backgroundColorTop": "transparent",
          "background": "transparent",
          "titleNView": false,
          "scrollIndicator": false,
          "popGesture": "none",
          "animationType": "fade-in",
          "animationDuration": 200
        }
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "@navTxtStyle",
    "navigationBarTitleText": "股票监测",
    "navigationBarBackgroundColor": "@navBgColor",
    "backgroundColor": "@bgColor",
    "backgroundTextStyle": "@bgTxtStyle"
  },
  "tabBar": {
    "color": "@tabFontColor",
    "selectedColor": "@tabSelectedColor",
    "backgroundColor": "@tabBgColor",
    "borderStyle": "@tabBorderStyle",
    "height": "50px",
    "fontSize": "12px",
    "iconWidth": "24px",
    "spacing": "3px",
    "list": [
      {
        "pagePath": "pages/dashboard/index",
        "text": "监测"
      },
      {
        "pagePath": "pages/market/index",
        "text": "市场"
      },
      {
        "pagePath": "pages/stock-search/index",
        "text": "搜索"
      },
      {
        "pagePath": "pages/settings/index",
        "text": "设置"
      }
    ]
  }
}
